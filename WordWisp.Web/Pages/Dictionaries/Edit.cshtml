@page "/dictionaries/{id:int}/edit"
@model EditDictionaryModel
@{
    ViewData["Title"] = "Редактировать словарь";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dictionaries.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-pencil"></i> Редактировать словарь</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Название словаря *</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Описание</label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                            <div class="form-text">Максимум 500 символов</div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="Input.IsPublic" class="form-check-input" />
                                <label asp-for="Input.IsPublic" class="form-check-label">
                                    <i class="bi bi-globe"></i> Сделать словарь публичным
                                </label>
                                <div class="form-text">Публичные словари могут видеть все пользователи</div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Сохранить изменения
                            </button>
                            <a href="/dictionaries/@Model.DictionaryId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
