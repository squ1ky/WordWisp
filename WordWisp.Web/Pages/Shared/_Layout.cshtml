<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WordWisp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/" class="logo-link">WordWisp</a>
                </div>

                <nav class="main-nav">
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="/dictionaries" class="nav-link">Мои Словари</a>
                        </li>
                        <li class="nav-item">
                            <a href="/materials" class="nav-link">Учебные Материалы</a>
                        </li>
                        <li class="nav-item">
                            <a href="/exams" class="nav-link">Экзамен</a>
                        </li>

                        @if (!string.IsNullOrEmpty(ViewContext.HttpContext.Request.Cookies["AuthToken"]))
                        {
                            <li class="nav-item">
                                <a href="/account" class="nav-link">Аккаунт</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right"></i> Выход
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="/auth/login" class="nav-link">Аккаунт</a>
                            </li>
                        }


                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <p>&copy; 2025 WordWisp. Все права защищены.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
