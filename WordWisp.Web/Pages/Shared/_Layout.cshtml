<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WordWisp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="main-header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <a href="/" class="logo-link">WordWisp</a>
                </div>

                <nav class="main-nav">
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="/dictionaries" class="nav-link">Мои Словари</a>
                        </li>
                        <li class="nav-item">
                            <a href="/materials" class="nav-link">Учебные Материалы</a>
                        </li>
                        <li class="nav-item">
                            <a href="/exams" class="nav-link">Экзамен</a>
                        </li>
                        <li class="nav-item">
                            <a href="/account" class="nav-link">Аккаунт</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <p>&copy; 2025 WordWisp. Все права защищены.</p>
        </div>
    </footer>
</body>
</html>
